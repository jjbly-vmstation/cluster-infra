# Kubespray Configuration Defaults
# VMStation Kubernetes Cluster Configuration

# Kubespray version and settings
KUBESPRAY_VERSION="v2.24.1"
KUBESPRAY_DIR="${CLUSTER_INFRA_DIR:-$(pwd)}/kubespray"
KUBESPRAY_VENV="${KUBESPRAY_DIR}/.venv"
KUBESPRAY_INVENTORY_DIR="${KUBESPRAY_DIR}/inventory/mycluster"

# Kubernetes version
KUBE_VERSION="v1.29.0"

# Network plugin
KUBE_NETWORK_PLUGIN="calico"

# Container runtime
CONTAINER_MANAGER="containerd"

# Node configuration
CONTROL_PLANE_ENDPOINT="192.168.4.63:6443"

# Network configuration
POD_NETWORK_CIDR="10.244.0.0/16"
SERVICE_NETWORK_CIDR="10.96.0.0/12"

# System settings
DISABLE_SWAP="true"
SETUP_FIREWALL="false"

# Python virtual environment
PYTHON_VERSION="3"
